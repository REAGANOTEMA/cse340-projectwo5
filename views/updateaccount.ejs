<h1>Update Account</h1>

<% if (errors && errors.length > 0) { %>
  <ul style="color:red;">
    <% errors.forEach(error => { %>
      <li><%= error %></li>
    <% }) %>
  </ul>
<% } %>

<% if (message) { %>
  <p style="color:green;"><%= message %></p>
<% } %>

<!-- Account Update Form -->
<form action="/account/update" method="POST">
  <input type="hidden" name="account_id" value="<%= account.account_id %>">
  <label for="firstname">First Name:</label>
  <input type="text" name="firstname" id="firstname" value="<%= account.firstname %>" required>
  <br>
  <label for="lastname">Last Name:</label>
  <input type="text" name="lastname" id="lastname" value="<%= account.lastname %>" required>
  <br>
  <label for="email">Email:</label>
  <input type="email" name="email" id="email" value="<%= account.email %>" required>
  <br>
  <input type="submit" value="Update Account">
</form>

<!-- Password Update Form -->
<h2>Change Password</h2>
<form action="/account/update-password" method="POST">
  <input type="hidden" name="account_id" value="<%= account.account_id %>">
  <label for="password">New Password:</label>
  <input type="password" name="password" id="password" required>
  <p>Password must be at least 8 characters.</p>
  <input type="submit" value="Change Password">
</form>
