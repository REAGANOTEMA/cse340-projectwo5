// Mock authentication middleware for Week 5
function requireauth(req, res, next) {
  // Mock logged-in user
  req.user = { account_id: 1, role: 'user', firstname: 'John', lastname: 'Doe', email: 'john@example.com' };
  next();
}

function requireadmin(req, res, next) {
  // Mock admin user
  req.user = { account_id: 1, role: 'admin', firstname: 'Admin', lastname: 'User', email: 'admin@example.com' };
  next();
}

module.exports = { requireauth, requireadmin };
